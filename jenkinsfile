pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("assignment_1:${env.BUILD_ID}")
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerHubCredentials_Assignment_1') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
    post {
        success {
            mail to: 'bilal.105.ahmed@gmail.com',
                 subject: "Build was accomplished: ${env.BUILD_NUMBER}"
        }
    }
}